            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Course\",\n  \"description\": \"A new programming course\",\n  \"price\": 199.99,\n  \"durationHours\": 30,\n  \"instructor\": \"John Doe\",\n  \"category\": \"Programming\",\n  \"level\": \"BEGINNER\",\n  \"maxStudents\": 25\n}"
