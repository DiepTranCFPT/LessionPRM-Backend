      "item": [
        {
          "name": "Get All Courses",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/courses?page=0&size=10",
              "host": ["{{base_url}}"],
              "path": ["courses"],
              "query": [
                {"key": "page", "value": "0"},
                {"key": "size", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Get Course by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/courses/1",
              "host": ["{{base_url}}"],
              "path": ["courses", "1"]
            }
          }
        },
