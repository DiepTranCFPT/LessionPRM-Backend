              "path": ["courses"]
            }
          }
        },
        {
          "name": "Search Courses",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/courses/search?keyword=java",
              "host": ["{{base_url}}"],
              "path": ["courses", "search"],
              "query": [
                {"key": "keyword", "value": "java"}
              ]
            }
          }
        },
        {
          "name": "Get Course Reviews",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/courses/1/reviews",
              "host": ["{{base_url}}"],
